	<template>
		<name x="40" y="16">Scheduler</name>
		<parameter>const task tasks[N]</parameter>
		<declaration>const task sta[N] = tasks;
task list[N] =tasks;
int[0,N] len = N;
clock t;

task empty = { 0,0,0,0 };

int_id running = 0;

int switchLen = 1;

int getSwitch()
{
    return switchTime * switchLen;
}

void incSwichLen()
{
    switchLen++;
}

void resetSwitch()
{
    switchLen = 1;
}

task idToTask(int_id id) {
    int i;
    for(i = 0; i &lt; N; i++)
    {
        if(sta[i].id == id)
            return sta[i];
    }
    return empty;
}


void enqueue(task element)
{
task tmp=empty;
list[len++] = element;
if (len&gt;0)
{
	int i=len-1;
	while (i&gt;0 &amp;&amp; list[i].P &gt; list[i-1].P)
	{
		tmp = list[i-1];
		list[i-1] = list[i];
		list[i] = tmp;
		i--;
	}		
}
}

// Remove the front element of the queue
void dequeue()
{
        int i = 0;
        len -= 1;
        while (i &lt; len)
        {
                list[i] = list[i + 1];
                i++;
        }
        list[i] = empty;
}

// Returns the front element of the queue
task front()
{
   return list[0];
}

// Returns the last element of the queue
task tail()
{
   return list[len - 1];
}</declaration>
